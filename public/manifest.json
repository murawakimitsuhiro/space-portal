{
  "manifest_version": 3,
  "name": "Space Portal",
  "version": "0.1.0",
  "description": "Upload file to GoogleDrive and add Scrapbox page",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Space Portal",
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": [
    "identity",
    "storage",
    "history",
    "contextMenus",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
